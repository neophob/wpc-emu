{
  "name": "wpc-emu-frontend",
  "version": "0.6.5",
  "description": "WPC pinball machine emu frontend",
  "main": "index.js",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "build": "SERVEURL=http://127.0.0.1:8080/ webpack --mode development",
    "build:production": "webpack --mode production",
    "test": "ava --verbose test/**",
    "watch": "SERVEURL=http://127.0.0.1:8080/ webpack --mode development --watch",
    "xo": "xo"
  },
  "author": "Michael Vogt",
  "license": "ISC",
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-minify-webpack-plugin": "Pinecast/babel-minify-webpack-plugin",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "css-loader": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "milligram": "^1.3.0",
    "raw-loader": "^0.5.1",
    "style-loader": "^0.23.0",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9",
    "xo": "^0.23.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "ava": {
    "modules": false,
    "require": [
      "babel-register"
    ],
    "inherit": true,
    "verbose": true
  },
  "xo": {
    "envs": [
      "browser"
    ],
    "space": true,
    "rules": {
      "comma-dangle": 0,
      "arrow-parens": 0,
      "no-var": 0,
      "comma-spacing": 0,
      "capitalized-comments": 0,
      "promise/prefer-await-to-then": 0,
      "ava/prefer-async-await": 0,
      "no-use-before-define": 0,
      "spaced-comment": 0,
      "object-curly-spacing": 0,
      "array-bracket-spacing": 0,
      "padded-blocks": 0,
      "no-mixed-operators": 0,
      "unicorn/import-index": 0,
      "new-cap": 0,
      "prefer-destructuring": 0,
      "no-use-extend-native/no-use-extend-native": 0
    }
  }
}
