{
  "name": "wpc-emu-frontend",
  "version": "0.36.20",
  "description": "WPC pinball machine emu frontend",
  "main": "index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "SERVEURL=https://localhost:8080/rom/ webpack --mode development",
    "build:production": "webpack --mode production",
    "test": "nyc ava --fail-fast --verbose test/**",
    "watch": "SERVEURL=https://localhost:8080/rom/ webpack --mode development --watch",
    "xo": "xo"
  },
  "author": "Michael Vogt",
  "license": "ISC",
  "dependencies": {
    "file-saver": "^2.0.5"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@babel/register": "^7.17.0",
    "ava": "^6.4.1",
    "browser-env": "^3.3.0",
    "css-loader": "^5.2.4",
    "current-device": "^0.10.2",
    "favicons-webpack-plugin": "4.2.0",
    "howler": "^2.2.3",
    "html-webpack-plugin": "^4.5.2",
    "milligram": "^1.4.1",
    "nyc": "^17.1.0",
    "raw-loader": "^4.0.1",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^4.2.3",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.9.2",
    "webpack-pwa-manifest": "^4.3.0",
    "whatwg-fetch": "^2.0.4",
    "workbox-webpack-plugin": "^3.6.3",
    "worker-loader": "^2.0.0",
    "xo": "^1.2.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "ava": {
    "nodeArguments": [
      "--require=@babel/register"
    ],
    "verbose": true
  },
  "xo": {
    "space": true,
    "rules": {
      "comma-dangle": "off",
      "arrow-parens": [
        "error",
        "always"
      ],
      "@stylistic/arrow-parens": [
        "error",
        "always"
      ],
      "arrow-body-style": "off",
      "no-var": "off",
      "comma-spacing": "off",
      "capitalized-comments": "off",
      "promise/prefer-await-to-then": "off",
      "ava/prefer-async-await": "off",
      "no-use-before-define": "off",
      "spaced-comment": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "template-curly-spacing": [
        "error",
        "always"
      ],
      "@stylistic/object-curly-spacing": [
        "error",
        "always"
      ],
      "@stylistic/template-curly-spacing": [
        "error",
        "always"
      ],
      "array-bracket-spacing": "off",
      "padded-blocks": "off",
      "no-mixed-operators": "off",
      "new-cap": "off",
      "prefer-destructuring": "off",
      "no-use-extend-native/no-use-extend-native": "off",
      "padding-line-between-statements": "off",
      "array-element-newline": "off",
      "unicorn/filename-case": "off",
      "no-undef": "off",
      "import-x/extensions": "off",
      "import-x/no-unassigned-import": "off",
      "unicorn/prefer-blob-reading-methods": "off",
      "no-unused-vars": "off",
      "@stylistic/no-mixed-operators": "off",
      "unicorn/prefer-module": "off"
    }
  }
}