{
  "name": "wpc-emu-frontend",
  "version": "0.22.2",
  "description": "WPC pinball machine emu frontend",
  "main": "index.js",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "build": "SERVEURL=https://localhost:8080/rom/ webpack --mode development",
    "build:production": "webpack --mode production",
    "test": "nyc ava --fail-fast --verbose test/**",
    "watch": "SERVEURL=https://localhost:8080/rom/ webpack --mode development --watch",
    "xo": "xo"
  },
  "author": "Michael Vogt",
  "license": "ISC",
  "devDependencies": {
    "@babel/register": "^7.0.0",
    "ava": "^0.25.0",
    "babel-preset-env": "^1.7.0",
    "browser-env": "^3.2.6",
    "css-loader": "^2.1.1",
    "current-device": "^0.8.0",
    "favicons-webpack-plugin": "0.0.9",
    "howler": "^2.1.1",
    "html-webpack-plugin": "^3.2.0",
    "milligram": "^1.3.0",
    "nyc": "^13.3.0",
    "raw-loader": "^2.0.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.2.3",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0",
    "webpack-pwa-manifest": "^4.0.0",
    "whatwg-fetch": "^2.0.4",
    "workbox-webpack-plugin": "^3.6.3",
    "xo": "^0.24.0"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "ava": {
    "modules": false,
    "require": [
      "babel-register"
    ],
    "inherit": true,
    "verbose": true
  },
  "xo": {
    "envs": [
      "browser"
    ],
    "space": true,
    "rules": {
      "comma-dangle": 0,
      "arrow-parens": 0,
      "no-var": 0,
      "comma-spacing": 0,
      "capitalized-comments": 0,
      "promise/prefer-await-to-then": 0,
      "ava/prefer-async-await": 0,
      "no-use-before-define": 0,
      "spaced-comment": 0,
      "object-curly-spacing": 0,
      "array-bracket-spacing": 0,
      "padded-blocks": 0,
      "no-mixed-operators": 0,
      "unicorn/import-index": 0,
      "new-cap": 0,
      "prefer-destructuring": 0,
      "no-use-extend-native/no-use-extend-native": 0,
      "padding-line-between-statements": 0,
      "array-element-newline": 0
    }
  },
  "dependencies": {
    "file-saver": "^2.0.1"
  }
}
